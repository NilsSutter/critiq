<div class="lp-card-wrapper" id="lp-feature-cards">
<!-- feature cards -->
  <div class="lp-cards">

    <div class="lp-card">
      <div class="image-padding-first">
        <%= image_tag "survey.svg", alt: "survey", class:"lp-card-img" %>
      </div>
      <div class="lp-card-text">
        <h4>Get Honest Data</h4>
        <p>Create easy and beautiful surveys for your peers directly in your online dashboard.</p>
      </div>
    </div>

    <div class="lp-card">
      <div class="image-padding">
        <%= image_tag "bot.svg", alt: "survey", class:"lp-card-img" %>
      </div>
      <div class="lp-card-text">
        <h4>Talk to Tinker</h4>
        <p>Our slackbot, Tinker, sends automated messages to collect anonymous feedback.</p>
      </div>
    </div>

    <div class="lp-card">
      <div class="image-padding">
        <%= image_tag "analytics.svg", alt: "survey", class:"lp-card-img" %>
      </div>
      <!-- GET RID OF MARGIN AFTER FIRST PITCH -->
      <div class="lp-card-text place-top">
        <h4>Utilize the Results</h4>
        <p>Effectively analyze your areas of improvement to quickly get insights.</p>
      </div>
    </div>

  </div>
</div>
<!-- END feature card -->

<!-- How to -->
<div class="howto-wrapper" id="howto">
  <div class="container">
    <div class="description space-bottom">
      <!-- left: img -->
      <div class="howto-img">
        <%= image_tag "signslack.svg", alt: "alttext" %>
      </div>
      <!-- right: text -->
      <div class="howto-text">
        <h3>Sign in with your Slack account</h3>
        <p>Seemless integration with your workspace. <br>Login through Slack, create a survey suited to your needs, and send it out within minutes.</p>
      </div>
    </div>

    <div class="description space-bottom">
      <!-- left: text -->
      <div class="howto-text">
        <h3>Your colleagues respond directly in Slack</h3>
          <p>The survey is answered by your peers directly through private messages to the bot - Tinker. No hassle to install just another application.</p>
      </div>
      <!-- right: img -->
      <div class="howto-text">
        <div class="howto-img">
          <%= image_tag "chat.svg", alt: "alttext" %>
        </div>
      </div>
    </div>

    <div class="description padding-bot">
      <!-- left: img -->
      <div class="howto-img">
        <%= image_tag "dashboard.svg", alt: "alttext" %>
      </div>
      <!-- right: text -->
      <div class="howto-text">
        <h3>Review the feedback you collected</h3>
        <p>As soon as enough people have answered, the anonymized results will be instantly displayed in your dashboard.</p>
      </div>
    </div>
  </div>
</div>

